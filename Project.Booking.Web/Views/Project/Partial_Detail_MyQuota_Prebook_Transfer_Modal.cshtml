                        </select>
                        <select class="form-control">
                            <option>นาที</option>
                        </select>
                    </div>
                </div>
                <div class="row r-prebook">
                    <div class="col-md-4 col-xs-5 p-right-0">
                        <label class="lb-prebook">จำนวนเงิน :</label>
                    </div>
                    <div class="col-md-8 col-xs-7 p-left-0">
                        <input type="text" id="trans-amount" class="decimal form-control" aria-label="">
                    </div>
                </div>
                <div class="row r-prebook">
                    <div class="col-md-12">
                        <form id="form-upload" method="post">
                            <input id="file-resource" class="" accept="image/*" type="file" name="AttachFile">
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <button class="btn btn-sm btn-danger">ยืนยันการโอนเงิน</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
