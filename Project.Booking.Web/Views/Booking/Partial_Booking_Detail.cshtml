    </div>*@
<div class="row">
    <div class="col-md-4 col-xs-6 l-header">Booked Date :</div>
    <div class="col-md-8 col-xs-6 l-detail">@(Model.BookingDate.AsDate().ToStringDateTime()) (GMT+7)</div>
</div>
<div class="row">
    <div class="col-md-4 col-xs-6 l-header">Model :</div>
    <div class="col-md-8 col-xs-6 l-detail">@Model.ModelTypeName</div>
</div>
<div class="row">
    <div class="col-md-4 col-xs-6 l-header">Unit Type :</div>
    <div class="col-md-8 col-xs-6 l-detail">@Model.UnitTypeName</div>
</div>
<div class="row">
    <div class="col-md-4 col-xs-6 l-header">Area :</div>
    <div class="col-md-8 col-xs-6 l-detail">@(Model.Area) Sq.m.</div>
</div>
@if (Model.AreaIncrease.AsDecimal() > 0)
{
    <div class="row">
        <div class="col-md-4 col-xs-6 l-header">Balcony Area :</div>
        <div class="col-md-8 col-xs-6 l-detail">@(Model.AreaIncrease) Sq.m.</div>
    </div>
}
<div class="row">
    <div class="col-md-4 col-xs-6 l-header">Selling Price :</div>
    <div class="col-md-8 col-xs-6 l-detail">@(Model.SellingPrice.AsDecimal().ToStringNumber()) ฿</div>
</div>
<div class="row">
    <div class="col-md-4 col-xs-6 l-header">Discount :</div>
    <div class="col-md-8 col-xs-6 l-detail">@(Model.Discount.AsDecimal().ToStringNumber()) ฿</div>
</div>
<div class="row">
    <div class="col-md-4 col-xs-6 l-header">Booked By :</div>
    <div class="col-md-8 col-xs-6 l-detail">@($"{Model.CustomerFirstName} {Model.CustomerLastName}")</div>
</div>
<div class="row">
    <div class="col-md-4 col-xs-6 l-header">Email :</div>
    <div class="col-md-8 col-xs-6 l-detail">@Model.CustomerEmail</div>
</div>
