    <div class="col-md-4 col-xs-6 l-header">Status :</div>
    @if (Model.BookingStatusID == Constant.BookingStatus.WAIT_PAYMENT)
    {
        <div class="col-md-8 col-xs-6 l-detail" style="color:green"><i class="fa fa-check"></i> @Model.BookingStatus</div>
    }
    @if (Model.BookingStatusID == Constant.BookingStatus.CANCEL)
    {
        <div class="col-md-8 col-xs-6 l-detail " style="color:red;"><i class="fa fa-remove"></i> @Model.BookingStatus</div>
    }
</div>
