@model Project.Booking.Model.BookingModel
@using Project.Booking.Extensions;
@using Project.Booking.Constants;
<h3 class="h-header">Booking Detail</h3>
<div class="row">
    <div class="col-md-4 col-xs-6 l-header">Project :</div>
    <div class="col-md-8 col-xs-6 l-detail">@Model.ProjectName</div>
</div>
<div class="row">
    <div class="col-md-4 col-xs-6 l-header">Unit Code :</div>
    <div class="col-md-8 col-xs-6 l-detail">@Model.UnitCode</div>
</div>
@*<div class="row">
        <div class="col-md-4 col-xs-6 l-header">Book No. :</div>
